<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="198dp">

            <RadioButton
                android:id="@+id/rdoContAmerica"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:text="America" />

            <RadioButton
                android:id="@+id/rdoContEuropa"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:text="Europa" />

            <RadioButton
                android:id="@+id/rdoContAsia"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:text="Asia" />

            <RadioButton
                android:id="@+id/rdoContAfrica"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:text="Africa" />

            <RadioButton
                android:id="@+id/rdoContOceania"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:text="Oceania" />

        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="173dp">

            <RadioButton
                android:id="@+id/rdoRios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rios" />

            <RadioButton
                android:id="@+id/rdoLagos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lagos" />

            <RadioButton
                android:id="@+id/rdoVolcanes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="rdoVolcanes" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="138dp">

            <CheckBox
                android:id="@+id/chkRios"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Rios" />

            <CheckBox
                android:id="@+id/chkLagos"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:text="Lagos" />

            <CheckBox
                android:id="@+id/chkVolcanes"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:text="Volcanes" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAceptar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Aceptar" />

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="159dp"
                android:layout_height="wrap_content"
                android:text="Regresar" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>